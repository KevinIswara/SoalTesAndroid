<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.kevin.view.DetailActivity">
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.kevin.a13515085_android_52.DetailActivity">
        <TextView
            android:id="@+id/nama_gunung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/template_nama_gunung"
            android:textStyle="bold"
            android:textSize="@dimen/title_size"
            android:padding="@dimen/small_padding"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/small_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/small_padding"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginEnd="@dimen/small_padding" />

        <ImageView
            android:id="@+id/gambar_gunung"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/nama_gunung" />

        <TextView
            android:id="@+id/tempat_gunung"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="@string/template_tempat_gunung"
            android:paddingTop="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingStart="@dimen/normal_padding"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gambar_gunung"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tinggi_gunung"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="@string/template_tinggi_gunung"
            android:paddingTop="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingStart="@dimen/normal_padding"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tempat_gunung"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>